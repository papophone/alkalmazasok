{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Raktár</h1>
</div>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Leírás</th>
            <th>Összeg</th>
            <th>Jelleg</th>
            <th>Bejegyezve</th>
            <th>Szerkesztés</th>
            <th>Törlés</th>
        </tr>   
    </thead>
    <tbody>
        {{#each raktar}}
        <tr>
            <td>{{description}}</td>
            <td><b>{{osszeg}}</b> Ft.-</td>
            <td><span class="label label-{{statusClass}}">{{statusText}}</span></td>
            <td>{{date}}</td>
            <td><a href="/raktar/review/{{id}}">Szerkesztés</a></td>
            <td><a href="/raktar/{{id}}">Törlés</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>