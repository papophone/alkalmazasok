<div class="page-header">
    <h1>Új bejegyzés feltöltése</h1>
</div>

<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group">
            <label for="tipus" class="col-lg-2 control-label">Típus</label>
            <div class="col-lg-10">
                <select class="form-control" name="tipus" id="tipus">
                    <option value="new" selected>Fizetés</option>
                    <option value="assigned">Bevétel</option>
                    <option value="success">Kiadás</option>
                    <option value="rejected">Vásárlás</option>
                    <option value="pending">Bankrablás</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="osszeg" class="col-lg-2 control-label">Összeg</label>
            <div class="col-lg-10">
                <input class="form-control" id="osszeg" name="osszeg" placeholder="25000" type="text" value="{{error.osszeg}}">
            </div>
        </div>
        <div class="form-group">
            <label for="leiras" class="col-lg-2 control-label">Leírás</label>
            <div class="col-lg-10">
                <textarea class="form-control" rows="3" id="leiras" name="leiras">{{error.description}}</textarea>
                <span class="help-block">Bevásárlólista, utalásazonosító, stb...</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Töröl</button>
                <button type="submit" class="btn btn-primary">Rögzítés</button>
            </div>
        </div>
    </fieldset>
</form>        