<div class="page-header">
    <h1>Új bejegyzés feltöltése</h1>
</div>

<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group">
            <label for="tipus" class="col-lg-2 control-label">Típus</label>
            <div class="col-lg-10">
                <select class="form-control" name="tipus" id="tipus">
                    <option value="new" selected>Beszállítás</option>
                    <option value="assigned">Eladás</option>
                    <option value="success">Selejt-árú</option>
                    <option value="rejected">Törött árú</option>
                    <option value="pending">Számlázott árú</option>
                </select>
            </div>
        </div>
        <div class="form-group
            {{#if validationErrors.osszeg}}
                has-error
            {{/if}}
        ">
            <label for="osszeg" class="col-lg-2 control-label">Összeg</label>
            <div class="col-lg-10">
                <input class="form-control" id="osszeg" name="osszeg" placeholder="10000" type="text" value="{{data.osszeg}}">
                {{#if validationErrors.osszeg}}
                    <span class="help-block">{{validationErrors.osszeg.msg}}</span>
                {{/if}}
            </div>
        </div>
        <div class="form-group
            {{#if validationErrors.leiras}}
                has-error
            {{/if}}
        ">
            <label for="leiras" class="col-lg-2 control-label">Leírás</label>
            <div class="col-lg-10">
                <textarea class="form-control" rows="3" id="leiras" name="leiras">{{data.leiras}}</textarea>
                <span class="help-block">Tv, rádió, számítógép ...</span>
                {{#if validationErrors.leiras}}
                    <span class="help-block">{{validationErrors.leiras.msg}}</span>
                {{/if}}
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Töröl</button>
                <button type="submit" class="btn btn-primary">Rögzítés</button>
            </div>
        </div>
    </fieldset>
</form>        